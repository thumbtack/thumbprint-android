<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThumbprintEditTextBase" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">@dimen/tp_space_3</item>
        <item name="android:paddingEnd">@dimen/tp_space_3</item>
        <item name="android:paddingTop">@dimen/spacing_smaller</item>
        <item name="android:paddingBottom">@dimen/spacing_smaller</item>
        <item name="android:textAppearance">@style/Thumbprint.Body1Regular</item>
        <item name="android:colorAccent">?attr/colorAccent</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">@color/primaryTextColor</item>
        <item name="android:textColorHighlight">@color/tp_blue_300</item>
        <item name="android:background">@drawable/edit_text_border_default</item>
    </style>

    <style name="ThumbprintTextAreaTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="editTextStyle">@style/ThumbprintTextArea</item>
    </style>

    <style name="ThumbprintTextArea" parent="ThumbprintEditTextBase">
        <item name="android:gravity">top</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="ThumbprintBasicTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="editTextStyle">@style/ThumbprintBasicText</item>
    </style>

    <style name="ThumbprintBasicText" parent="ThumbprintEditTextBase">
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ThumbprintBasicTextWithDrawablesTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="editTextStyle">@style/ThumbprintBasicTextWithDrawables</item>
    </style>

    <style name="ThumbprintBasicTextWithDrawables" parent="ThumbprintBasicText">
        <item name="android:drawableStart">@drawable/edit_text_placeholder_icon</item>
        <item name="android:drawablePadding">@dimen/tp_space_2</item>
    </style>
</resources>
